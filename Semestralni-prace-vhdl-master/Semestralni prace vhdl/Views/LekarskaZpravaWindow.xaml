<Window x:Class="Semestralni_prace_vhdl.Views.LekarskaZpravaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lékařské zprávy" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#444"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF2C3E50" Offset="0.0"/>
                <GradientStop Color="#FF4CA1AF" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📝" FontSize="30" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="LÉKAŘSKÉ ZPRÁVY" FontSize="24" FontWeight="Bold" Foreground="White" FontFamily="Segoe UI Light"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Pacient: " Foreground="#DDD" FontSize="16"/>
                        <TextBlock Text="{Binding Pacient.Prijmeni}" FontWeight="Bold" Foreground="White" FontSize="16"/>
                        <TextBlock Text=" " FontSize="16"/>
                        <TextBlock Text="{Binding Pacient.Jmeno}" FontWeight="Bold" Foreground="White" FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- New Report Form -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Nová zpráva" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2C3E50"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <Label Content="Datum vyšetření"/>
                            <DatePicker SelectedDate="{Binding NovaZprava.DatumVysetreni}" Margin="0,0,0,15" Height="35"/>

                            <Label Content="Lékař"/>
                            <TextBox Text="{Binding NovaZprava.Lekar, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" />

                            <Label Content="Diagnóza"/>
                            <TextBox Text="{Binding NovaZprava.Diagnoza}" />

                            <Label Content="Popis vyšetření"/>
                            <TextBox Text="{Binding NovaZprava.Popis, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Height="100" TextWrapping="Wrap" VerticalContentAlignment="Top"/>

                            <Label Content="Doporučení"/>
                            <TextBox Text="{Binding NovaZprava.Doporuceni}" Height="60" TextWrapping="Wrap" VerticalContentAlignment="Top"/>
                        </StackPanel>
                    </ScrollViewer>

                    <Button Grid.Row="2" Command="{Binding SaveCommand}" 
                            Content="ULOŽIT ZPRÁVU" 
                            Background="#27ae60" Foreground="White" FontWeight="Bold"
                            Padding="15" Margin="0,15,0,0" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- History List -->
            <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Historie zpráv" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2C3E50"/>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding HistorieZprav}" AutoGenerateColumns="False" 
                              IsReadOnly="True" Background="White" BorderThickness="0"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F8F9FA"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#EEE"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGrid.RowStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Datum" Binding="{Binding DatumVysetreni, StringFormat=dd.MM.yyyy}" Width="90"/>
                            <DataGridTextColumn Header="Diagnóza" Binding="{Binding Diagnoza}" Width="*"/>
                            <DataGridTextColumn Header="Lékař" Binding="{Binding Lekar}" Width="150"/>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="DETAIL" 
                                                Command="{Binding DataContext.OpenDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                CommandParameter="{Binding}"
                                                Background="#3498db" Foreground="White" FontWeight="Bold" FontSize="10"
                                                Padding="10,5" Margin="5" BorderThickness="0" Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>