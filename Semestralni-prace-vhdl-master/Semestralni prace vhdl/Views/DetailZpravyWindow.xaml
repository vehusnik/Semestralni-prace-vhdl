        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="20" Background="White" BorderThickness="0" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#FF2C3E50" CornerRadius="20,20,0,0" Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“„" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="DETAIL ZPRÃVY" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Datum vyÅ¡etÅ™enÃ­" FontSize="12" Foreground="#888"/>
                            <TextBlock Text="{Binding Zprava.DatumVysetreni, StringFormat=dd.MM.yyyy HH:mm}" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <TextBlock Text="LÃ©kaÅ™" FontSize="12" Foreground="#888" HorizontalAlignment="Right"/>
                            <TextBlock Text="{Binding Zprava.Lekar}" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>

                    <Separator Margin="0,0,0,15" Background="#EEE"/>

                    <TextBlock Text="DiagnÃ³za" FontSize="12" Foreground="#888"/>
                    <TextBlock Text="{Binding Zprava.Diagnoza}" FontSize="18" FontWeight="Bold" Foreground="#e67e22" Margin="0,0,0,15" TextWrapping="Wrap"/>

                    <TextBlock Text="Popis vyÅ¡etÅ™enÃ­" FontSize="12" Foreground="#888"/>
                    <TextBlock Text="{Binding Zprava.Popis}" FontSize="15" Margin="0,0,0,15" TextWrapping="Wrap" LineHeight="22"/>

                    <TextBlock Text="DoporuÄenÃ­" FontSize="12" Foreground="#888"/>
                    <Border Background="#e8f6f3" CornerRadius="5" Padding="10">
                        <TextBlock Text="{Binding Zprava.Doporuceni}" FontSize="15" Foreground="#16a085" TextWrapping="Wrap" FontStyle="Italic"/>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Button Grid.Row="2" Command="{Binding CloseCommand}" Content="ZAVÅ˜ÃT" 
                    Background="#95a5a6" Foreground="White" FontWeight="Bold"
                    Padding="15" Margin="20,0,20,20" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>

</Window>
