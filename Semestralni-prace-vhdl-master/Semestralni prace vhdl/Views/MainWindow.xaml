<Window x:Class="Semestralni_prace_vhdl.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Evidenční systém lékaře" Height="550" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF2C3E50" Offset="0.0"/>
                <GradientStop Color="#FF4CA1AF" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Margin="0,40,0,20">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🏥" FontSize="60" HorizontalAlignment="Center"/>
                <TextBlock Text="MEDISYS" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           FontFamily="Segoe UI Light"/>
                <TextBlock Text="EVIDENČNÍ SYSTÉM LÉKAŘE" 
                           FontSize="16" 
                           Foreground="#E0E0E0" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Dashboard Cards -->
        <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Click="OtevritSeznam_Click" 
                    Background="White" BorderThickness="0" Height="220" Width="250" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="📂" FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock Text="SEZNAM&#x0a;PACIENTŮ" 
                                           TextAlignment="Center"
                                           FontSize="22" 
                                           FontWeight="Bold" 
                                           Foreground="#333"/>
                                <TextBlock Text="Vyhledávání a&#x0a;správa karty" 
                                           TextAlignment="Center"
                                           FontSize="14" 
                                           Foreground="#777" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- Footer -->
        <TextBlock Grid.Row="2" Text="© 2025 Medisys System | Verze 1.0" 
                   Foreground="White" Opacity="0.6" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>
    </Grid>
</Window>