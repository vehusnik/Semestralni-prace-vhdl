<Window x:Class="Semestralni_prace_vhdl.Views.PřehledPacientuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:Semestralni_prace_vhdl.Converters"
        Title="Seznam pacientů" Height="750" Width="1250"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:EnumDescriptionConverter x:Key="EnumConverter"/>

        <!-- Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF2C3E50" Offset="0.0"/>
                <GradientStop Color="#FF4CA1AF" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="SEZNAM PACIENTŮ" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           FontFamily="Segoe UI Light"/>
                <TextBlock Text="Správa karet a historie" 
                           FontSize="14" 
                           Foreground="#D0D0D0"/>
            </StackPanel>

            <!-- Search Box -->
            <Border Grid.Column="1" Background="White" CornerRadius="20" Padding="10,5" Width="300" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔍" VerticalAlignment="Center" Foreground="#999" FontSize="16" Margin="5,0,10,0"/>
                    <TextBox x:Name="TxtSearch" Width="250" Padding="5" 
                             BorderThickness="0" Background="Transparent"
                             FontSize="14"
                             VerticalAlignment="Center" 
                             TextChanged="TxtSearch_TextChanged" 
                             Tag="Vyhledat..."/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Data Grid Container -->
        <Border Grid.Row="1" Background="White" CornerRadius="15" Margin="20,0,20,20" Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.1"/>
            </Border.Effect>
            <Border ClipToBounds="True" CornerRadius="15">
                <DataGrid x:Name="DG_Pacienti" AutoGenerateColumns="False" 
                          CanUserAddRows="False" SelectionMode="Single"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Titul" Binding="{Binding Titulpřed}" Width="60"/>
                        <DataGridTextColumn Header="Jméno" Binding="{Binding Jmeno}" Width="*"/>
                        <DataGridTextColumn Header="Příjmení" Binding="{Binding Prijmeni}" Width="*"/>
                        <DataGridTextColumn Header="Titul za" Binding="{Binding Titulza}" Width="60"/>
                        <DataGridTextColumn Header="Narození" Binding="{Binding DatumNarozeni, StringFormat=dd.MM.yyyy}" Width="90"/>
                        <DataGridTextColumn Header="Adresa" Binding="{Binding Adresa}" Width="1.5*"/>
                        <DataGridTextColumn Header="Pohlaví" Binding="{Binding Pohlaví, Converter={StaticResource EnumConverter}}" Width="70"/>
                        <DataGridTextColumn Header="Číslo pojištěnce" Binding="{Binding Cislo_pojistence}" Width="120"/>
                        <DataGridTextColumn Header="Pojišťovna" Binding="{Binding Pojistovna, Converter={StaticResource EnumConverter}}" Width="80"/>
                        <DataGridTextColumn Header="Lékař" Binding="{Binding Doctor}" Width="120"/>
                        
                        <DataGridTemplateColumn Header="Akce" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="BtnDetail_Click" Background="#E0E0E0" Padding="8,4" Margin="0" Cursor="Hand" ToolTip="Zobrazit historii zpráv">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="📜 Zprávy" FontSize="11"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
            
            <Button Click="PridatPacienta_Click" Style="{StaticResource ModernButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="➕" Foreground="#27ae60" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="PŘIDAT PACIENTA" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Click="PridatZpravu_Click" Style="{StaticResource ModernButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📝" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="NOVÁ ZPRÁVA" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Click="BtnUpravit_Click" Style="{StaticResource ModernButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✏️" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="UPRAVIT" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Click="BtnOdstranit_Click" Style="{StaticResource ModernButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗑️" Foreground="#c0392b" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="ODSTRANIT" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
        </StackPanel>
    </Grid>
</Window>